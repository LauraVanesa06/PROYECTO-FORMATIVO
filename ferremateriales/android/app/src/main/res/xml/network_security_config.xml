<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permite conexiones HTTP y HTTPS sin restricciones para desarrollo -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Configuración específica para ngrok -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">ngrok-free.app</domain>
        <domain includeSubdomains="true">ngrok.io</domain>
        <domain includeSubdomains="true">whole-tahr-stunning.ngrok-free.app</domain>
    </domain-config>
</network-security-config>

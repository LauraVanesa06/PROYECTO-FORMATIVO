<% if cart_items.any? %>
  <table class="table align-middle">
    <thead>
      <tr>
        <th><%= t("cart.table.product") %></th>
        <th><%= t("cart.table.price") %></th>
        <th><%= t("cart.table.quantity") %></th>
        <th><%= t("cart.table.total") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% cart_items.each do |item| %>
        <tr id="<%= dom_id(item) %>">
          <td>
            <% if item.product.images.present? %>
              <%= image_tag url_for(item.product.images.first), alt: item.product.nombre, class: "img-thumbnail", style: "width: 70px; height: 70px; object-fit: cover;" %>
            <% else %>
              <%# image_tag "placeholder.png", class: "img-thumbnail", style: "width: 70px; height: 70px; object-fit: cover;" %>
            <% end %>
            <strong><%= item.product.nombre %></strong>
          </td>
          <td><%= item.product.precio %></td>
          <td>
            <%= form_with url: cart_item_path(item), method: :patch, data: { turbo_stream: true }, class: "d-inline" do %>
              <div class="input-group" style="width: 120px;">
                <%= number_field_tag :quantity, item.quantity, min: 1, class: "form-control text-center" %>
                <button class="btn btn-outline-primary" type="submit" title="<%= t('cart.update_quantity') %>">
                  <i class="fa-solid fa-rotate"></i>
                </button>
              </div>
            <% end %>
          </td>
          <td><%= number_to_currency((item.product.precio || 0) * item.quantity.to_i) %></td>

          <td>
            <%= button_to cart_item_path(item), 
                          method: :delete, 
                          data: { turbo_stream: true, confirm: t("cart.confirm_remove") }, 
                          class: "btn btn-outline-danger btn-sm" do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-end">
    <h4><%= t("cart.total") %>: <%= number_to_currency(cart_items.sum { |i| i.product.precio * i.quantity }) %></h4>
  </div>
<% else %>
  <p><%= t("cart.empty") %></p>
<% end %>
<%= link_to "Pagar", new_payment_path, class: "btn btn-success" %>



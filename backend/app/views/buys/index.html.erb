<script>
  let grafica = null;

  function cargarGrafica() {
    const datos = {
      labels: ['Hoy', 'Semana', 'Mes', 'Año'],
      datasets: [{
        label: 'Ventas',
        data: [
          <%= @ventas_hoy %>,
          <%= @ventas_semana %>,
          <%= @ventas_mes %>,
          <%= @ventas_anio %>
        ],
        borderColor: '#4472B8',
        backgroundColor: 'rgba(68, 114, 184, 0.1)',
        borderWidth: 2,
        fill: true,
        tension: 0.4,
        pointRadius: 5,
        pointBackgroundColor: '#4472B8',
        pointBorderColor: '#fff',
        pointBorderWidth: 2
      }]
    };

    const ctx = document.getElementById('grafica');
    if (!ctx) return;

    grafica = new Chart(ctx, {
      type: 'line',
      data: datos,
      options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
          legend: {
            labels: {
              usePointStyle: true,
              color: '#1c1c1c',
              font: {
                family: 'Poppins',
                size: 14,
                weight: 'bold'
              }
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              color: '#1c1c1c',
              font: { family: 'Poppins', size: 12, weight: '600' },
              stepSize: 1
            },
            grid: { color: 'rgba(0, 0, 0, 0.1)' }
          },
          x: {
            ticks: {
              color: '#1c1c1c',
              font: { family: 'Poppins', size: 12, weight: '600' }
            },
            grid: { color: 'rgba(0, 0, 0, 0.1)' }
          }
        }
      }
    });
  }

  document.addEventListener("DOMContentLoaded", cargarGrafica);

  // btn vver comprar (para abrir el modal)
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("modal-reutilizable");
    const closeBtn = modal?.querySelector("#modal-close");

    if (!modal) {
      return;
    }

    if (!closeBtn) {
      return;
    }

    // Abrir modal al hacer click en botones
    document.querySelectorAll(".show-buy").forEach(button => {
      button.addEventListener("click", async () => {
        const buyId = button.dataset.buyId;
        
        const data = {
          cliente: button.dataset.nombreCliente,
          documento: button.dataset.documentoCliente,
          fecha: button.dataset.fechaCompra,
          tipoCompra: button.dataset.tipoCompra,
          metodo: button.dataset.metodoCompra,
          total: button.dataset.total
        };

        // Llenar datos del cliente en modal
        modal.querySelector(".modal-nombre-cliente").textContent = data.cliente;
        modal.querySelector(".modal-documento-cliente").textContent = data.documento;
        modal.querySelector(".modal-fecha-compra").textContent = data.fecha;
        // modal.querySelector(".modal-tipo-compra").textContent = data.tipoCompra;
        modal.querySelector(".modal-metodo-compra").textContent = data.metodo;

        // Cargar productos mediante AJAX
        const productosLista = modal.querySelector("#modal-productos-lista");
        productosLista.innerHTML = '<p style="text-align: center; padding: 20px;">Cargando productos...</p>';

        try {
          const response = await fetch(`/buys/${buyId}/productos`);
          const productos = await response.json();
          
          if (productos.length === 0) {
            productosLista.innerHTML = '<p style="text-align: center; padding: 20px; color: #7f8c8d;">No hay productos en esta venta</p>';
            modal.querySelector(".modal-precio-producto").textContent = 'COP 0,00';
          } else {
            // Calcular el total real sumando los subtotales de los productos
            const totalReal = productos.reduce((sum, producto) => {
              // Extraer solo el número del subtotal formateado (remover COP, puntos y comas)
              const subtotalNumero = parseFloat(producto.subtotal.replace(/[COP.,\s]/g, '').replace(',', '.'));
              return sum + subtotalNumero;
            }, 0);
            
            // Formatear el total en pesos colombianos con el formato COP 32.000,00
            const totalFormateado = 'COP ' + totalReal.toLocaleString('es-CO', {
              minimumFractionDigits: 2,
              maximumFractionDigits: 2
            });
            
            // Actualizar el total en el modal
            modal.querySelector(".modal-precio-producto").textContent = totalFormateado;
            
            productosLista.innerHTML = productos.map(producto => `
              <div class="product-compact">
                <div class="product-img-compact">
                  ${producto.imagen ? 
                    `<img src="${producto.imagen}" alt="${producto.nombre}">` : 
                    '<i class="fas fa-box"></i>'}
                </div>
                <div class="product-info-compact">
                  <div class="product-name-compact">${producto.nombre}</div>
                  <div class="product-meta-compact">
                    ${producto.cantidad} × ${producto.precio_unitario}
                  </div>
                </div>
                <div class="product-total-compact">
                  ${producto.subtotal}
                </div>
              </div>
            `).join('');
            
            // Agregar estilos compactos para las tarjetas de productos
            if (!document.getElementById('product-card-styles')) {
              const styles = document.createElement('style');
              styles.id = 'product-card-styles';
              styles.textContent = `
                .product-compact {
                  display: flex;
                  align-items: center;
                  gap: 12px;
                  padding: 10px 12px;
                  background: #f8f9fa;
                  border-bottom: 1px solid #e5e7eb;
                  transition: all 0.2s ease;
                }
                
                .product-compact:last-child {
                  border-bottom: none;
                }
                
                .product-compact:hover {
                  background: #eff6ff;
                }
                
                .product-img-compact {
                  flex-shrink: 0;
                  width: 50px;
                  height: 50px;
                  border-radius: 6px;
                  overflow: hidden;
                  background: white;
                  display: flex;
                  align-items: center;
                  justify-content: center;
                  border: 1px solid #3b82f6;
                }
                
                .product-img-compact img {
                  width: 100%;
                  height: 100%;
                  object-fit: cover;
                }
                
                .product-img-compact i {
                  color: #2563eb;
                  font-size: 20px;
                }
                
                .product-info-compact {
                  flex: 1;
                  min-width: 0;
                }
                
                .product-name-compact {
                  font-size: 14px;
                  font-weight: 600;
                  color: #1f2937;
                  margin-bottom: 4px;
                  white-space: nowrap;
                  overflow: hidden;
                  text-overflow: ellipsis;
                }
                
                .product-meta-compact {
                  font-size: 12px;
                  color: #6b7280;
                  opacity: 0.9;
                }
                
                .product-total-compact {
                  font-size: 16px;
                  font-weight: 700;
                  color: #1e3a8a;
                  font-family: 'Courier New', monospace;
                  flex-shrink: 0;
                }
                
                @media (max-width: 768px) {
                  .product-compact {
                    padding: 8px 10px;
                  }
                  
                  .product-img-compact {
                    width: 45px;
                    height: 45px;
                  }
                  
                  .product-name-compact {
                    font-size: 13px;
                  }
                  
                  .product-total-compact {
                    font-size: 14px;
                  }
                }
              `;
              document.head.appendChild(styles);
            }
          }
        } catch (error) {
          productosLista.innerHTML = '<p style="text-align: center; padding: 20px; color: red;">Error al cargar los productos</p>';
        }

        // Mostrar modal
        modal.style.display = "flex";
      });
    });

    // Cerrar modal
    closeBtn.addEventListener("click", (e) => {
      e.preventDefault();
      modal.style.display = "none";
    });

    // También cerrar si clickea afuera
    modal.addEventListener("click", (e) => {
      if (e.target === modal) {
        modal.style.display = "none";
      }
    });
  });

  // Limpiar filtros
  document.addEventListener("DOMContentLoaded", function () {
      const botonLimpiar = document.getElementById("limpiar-filtros");

      if (botonLimpiar) {
        botonLimpiar.addEventListener("click", function () {
          // Encuentra el formulario que contiene los filtros
          const form = botonLimpiar.closest("form");

          if (form) {
            // Limpia todos los campos del formulario
            const inputs = form.querySelectorAll("input, select, textarea");
            inputs.forEach((input) => {
              if (input.type === "checkbox" || input.type === "radio") {
                input.checked = false;
              } else {
                input.value = "";
              }
            });

            // Espera un momento antes de recargar sin filtros
            setTimeout(() => {
              const urlSinParametros = window.location.origin + window.location.pathname;
              window.location.href = urlSinParametros;
            }, 100);
          }
        });
      }
    });
</script>


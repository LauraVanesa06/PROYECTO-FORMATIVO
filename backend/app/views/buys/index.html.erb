<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard Ferretería</title>
  <%= stylesheet_link_tag "ventas", media: "all" %>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag "dashboard", media: "all" %>
  <%= stylesheet_link_tag "factura", media: "all" %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Eczar:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

  <header>
    <div class="container-header">
      <button class="hamburger" id="hamburger">&#9776;</button>
      <div id="control">
        <div class="panel"><%= image_tag "panel-control.png", class: "c-panel" %></div>
        <p class="pricipal">Panel de Control</p>
      </div>
      
      <% if user_signed_in? %>
       <%= button_to destroy_user_session_path, method: :delete, form: { data: { turbo: true } }, id: "cerrar", class: "logout2" do %>
  <span><i class="fas fa-sign-out-alt" style="color: white"></i></span>
<% end %>

      <% end %>
    </div>
  </header>

  <nav class="nav-bg">
    <div class="container-nav">
      <ul class="menu" id="menu">
        <li><a href="/dashboard"class="link-menu">Inicio</a></li>
        <li><a href="/dashboard/productos"class="link-menu">Productos</a></li>
        <li><a href="/dashboard/ventas"class="link-menu">Ventas</a></li>
        <li><a href="/dashboard/pedidos"class="link-menu">Pedidos</a></li>
        <%# <li><a href="dashboard/suppliers"class="link-menu">Proveedores</a></li> %>
        <%# <li><a href="/dashboard/clientes"class="link-menu">Clientes</a></li> %>
        <li><a href="/dashboard/help"class="link-menu">Ayuda</a></li>
      </ul>
      <div>
          <% if user_signed_in? %>
            <%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete, form: { data: { turbo: true } }, id: "cerrar", class: "logout"%>
          <% end %>
        </div>
    </div>
  </nav>

  <section class="container">
    <div class="cont-volver">
      <a href="ventas" class="a-volver" style="text-decoration:none;"><i class="fas fa-arrow-left" style="color:white;"></i></a>
    </div> 
    <section id=sect1>
      <div class="degradado">
        <p class= "titulo-cant">Cantidad total de Ventas:</p>
        <div class="conten">
          <div class="info3"><a class="info2">10</a><a class="info">Hoy</a></div>
          <div class="info3"><a class="info2">20</a><a class="info">Semana</a></div>
          <div class="info3"><a class="info2">15</a><a class="info">Mes</a></div>
          <div class="info3"><a class="info2">40</a><a class="info">Año</a></div>
        </div>
        <canvas id="grafica"></canvas>
      </div>
      <div class="div-white"></div>
    </section>
    <section id=sect2>
      <nav class="nav-filtros">
        <p class=p><i class="fas fa-filter"></i> Filtros</p>
        <div class="div">
          <%= form_tag ventas_path, class:"filtros", method: :get do %>
            <div class="filtro-id">
              <%= label_tag :customer, "Cliente:" %>
              <%= text_field_tag :customer, params[:customer], placeholder: "Ej: juan", size: 10, style:"border-radius:10px; padding-left: 10px; border:1px solid grey;" %>
            </div>
            <div class="filtro-id">
              <%= label_tag :fecha, "Fecha:" %>
              <%= text_field_tag :year, params[:year], placeholder: "AAAA", size: 4, style:"border-radius:10px; padding-left: 10px; border:1px solid grey;" %>
              <%= text_field_tag :month, params[:month], placeholder: "MM", size: 2, style:"border-radius:10px; padding-left: 10px; border:1px solid grey;" %>
              <%= text_field_tag :day, params[:day], placeholder: "DD", size: 2, style:"border-radius:10px; padding-left: 10px; border:1px solid grey;" %>
            </div>
            <div>
              <button id="limpiar-filtros" type="button" class="btn-save">
                <i class="fas fa-broom"></i>
              </button>
            </div>
            <div>
              <%= button_tag type: 'submit', class: 'btn-save', name: '' do %>
                <i class="fas fa-search"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </nav>
      <div class="cont-ventas">
        <div id="buys">
          <% if flash[:alert] %>
            <div id="mensaje-alerta" class="alerta-filtro">
              <%= flash[:alert] %>
            </div>

            <script>
              setTimeout(() => {
                const alerta = document.getElementById("mensaje-alerta");
                if (alerta) alerta.style.display = "none";
              }, 4000); // 4 segundos
            </script>
          <% end %>

          <% if @buys.present? %>
            <% @buys.each do |buy| %>
              <%= render buy %>
            <% end %>
          <% else %>
          
          <% end %>

        </div>
      </div>
    </section>
  </section>

  <!-- Modal fuera del loop -->
  <div id="modal-reutilizable" class="modal" style="display:none;">
    <%= render 'buys/modal' %>
  </div>

<script>
  let grafica = null;

  function cargarGrafica() {
    fetch('/api/v1/buys/ventas_por_tipo')
      .then(response => response.json())
      .then(datos => {
        if (grafica) {
          grafica.data.labels = datos.labels;
          grafica.data.datasets = datos.datasets;
          grafica.update();
        } else {
          grafica = new Chart(document.getElementById('grafica'), {
            type: 'bar',
            data: {
              labels: datos.labels,
              datasets: datos.datasets
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                legend: {
                  labels: {
                    usePointStyle: true,
                    pointStyle: 'circle',
                    color: '#1c1c1cff',
                    font: {
                      family: 'Poppins',
                      size: 12,
                      weight: 'bold'
                    }
                  }
                }
              },
              scales: {
                y: {
                  beginAtZero: true,
                  ticks: {
                    color: '#1c1c1cff',
                    font: { family: 'Poppins', size: 14, weight: '600' }
                  },
                  grid: { color: '#888888' }
                },
                x: {
                  ticks: {
                    color: '#1c1c1cff',
                    font: { family: 'Poppins', size: 14, weight: '600' }
                  },
                  grid: { color: '#888888' }
                }
              }
            }
          });
        }
      });
  }

  document.addEventListener("DOMContentLoaded", cargarGrafica);

  // btn vver comprar (para abrir el modal)
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("modal-reutilizable");
    const closeBtn = modal?.querySelector("#modal-close");

    console.log('Modal encontrado:', modal);
    console.log('Botones encontrados:', document.querySelectorAll(".show-buy").length);

    if (!modal) {
      console.error('No se encontró el modal con id "modal-reutilizable"');
      return;
    }

    if (!closeBtn) {
      console.error('No se encontró el botón de cerrar modal');
      return;
    }

    // Abrir modal al hacer click en botones
    document.querySelectorAll(".show-buy").forEach(button => {
      button.addEventListener("click", async () => {
        console.log('Click en botón Ver detalles');
        const buyId = button.dataset.buyId;
        console.log('Buy ID:', buyId);
        
        const data = {
          cliente: button.dataset.nombreCliente,
          documento: button.dataset.documentoCliente,
          fecha: button.dataset.fechaCompra,
          tipoCompra: button.dataset.tipoCompra,
          metodo: button.dataset.metodoCompra,
          total: button.dataset.total
        };

        // Llenar datos del cliente en modal
        modal.querySelector(".modal-nombre-cliente").textContent = data.cliente;
        modal.querySelector(".modal-documento-cliente").textContent = data.documento;
        modal.querySelector(".modal-fecha-compra").textContent = data.fecha;
        // modal.querySelector(".modal-tipo-compra").textContent = data.tipoCompra;
        modal.querySelector(".modal-metodo-compra").textContent = data.metodo;

        // Cargar productos mediante AJAX
        const productosLista = modal.querySelector("#modal-productos-lista");
        productosLista.innerHTML = '<p style="text-align: center; padding: 20px;">Cargando productos...</p>';

        try {
          const response = await fetch(`/buys/${buyId}/productos`);
          const productos = await response.json();
          
          console.log('Productos recibidos:', productos);
          
          if (productos.length === 0) {
            productosLista.innerHTML = '<p style="text-align: center; padding: 20px; color: #7f8c8d;">No hay productos en esta venta</p>';
            modal.querySelector(".modal-precio-producto").textContent = 'COP 0,00';
          } else {
            // Calcular el total real sumando los subtotales de los productos
            const totalReal = productos.reduce((sum, producto) => {
              // Extraer solo el número del subtotal formateado (remover COP, puntos y comas)
              const subtotalNumero = parseFloat(producto.subtotal.replace(/[COP.,\s]/g, '').replace(',', '.'));
              return sum + subtotalNumero;
            }, 0);
            
            // Formatear el total en pesos colombianos con el formato COP 32.000,00
            const totalFormateado = 'COP ' + totalReal.toLocaleString('es-CO', {
              minimumFractionDigits: 2,
              maximumFractionDigits: 2
            });
            
            // Actualizar el total en el modal
            modal.querySelector(".modal-precio-producto").textContent = totalFormateado;
            
            productosLista.innerHTML = productos.map(producto => `
              <div class="product-compact">
                <div class="product-img-compact">
                  ${producto.imagen ? 
                    `<img src="${producto.imagen}" alt="${producto.nombre}">` : 
                    '<i class="fas fa-box"></i>'}
                </div>
                <div class="product-info-compact">
                  <div class="product-name-compact">${producto.nombre}</div>
                  <div class="product-meta-compact">
                    ${producto.cantidad} × ${producto.precio_unitario}
                  </div>
                </div>
                <div class="product-total-compact">
                  ${producto.subtotal}
                </div>
              </div>
            `).join('');
            
            // Agregar estilos compactos para las tarjetas de productos
            if (!document.getElementById('product-card-styles')) {
              const styles = document.createElement('style');
              styles.id = 'product-card-styles';
              styles.textContent = `
                .product-compact {
                  display: flex;
                  align-items: center;
                  gap: 12px;
                  padding: 10px 12px;
                  background: #f8f9fa;
                  border-bottom: 1px solid #e5e7eb;
                  transition: all 0.2s ease;
                }
                
                .product-compact:last-child {
                  border-bottom: none;
                }
                
                .product-compact:hover {
                  background: #eff6ff;
                }
                
                .product-img-compact {
                  flex-shrink: 0;
                  width: 50px;
                  height: 50px;
                  border-radius: 6px;
                  overflow: hidden;
                  background: white;
                  display: flex;
                  align-items: center;
                  justify-content: center;
                  border: 1px solid #3b82f6;
                }
                
                .product-img-compact img {
                  width: 100%;
                  height: 100%;
                  object-fit: cover;
                }
                
                .product-img-compact i {
                  color: #2563eb;
                  font-size: 20px;
                }
                
                .product-info-compact {
                  flex: 1;
                  min-width: 0;
                }
                
                .product-name-compact {
                  font-size: 14px;
                  font-weight: 600;
                  color: #1f2937;
                  margin-bottom: 4px;
                  white-space: nowrap;
                  overflow: hidden;
                  text-overflow: ellipsis;
                }
                
                .product-meta-compact {
                  font-size: 12px;
                  color: #6b7280;
                  opacity: 0.9;
                }
                
                .product-total-compact {
                  font-size: 16px;
                  font-weight: 700;
                  color: #1e3a8a;
                  font-family: 'Courier New', monospace;
                  flex-shrink: 0;
                }
                
                @media (max-width: 768px) {
                  .product-compact {
                    padding: 8px 10px;
                  }
                  
                  .product-img-compact {
                    width: 45px;
                    height: 45px;
                  }
                  
                  .product-name-compact {
                    font-size: 13px;
                  }
                  
                  .product-total-compact {
                    font-size: 14px;
                  }
                }
              `;
              document.head.appendChild(styles);
            }
          }
        } catch (error) {
          console.error('Error al cargar productos:', error);
          productosLista.innerHTML = '<p style="text-align: center; padding: 20px; color: red;">Error al cargar los productos</p>';
        }

        // Mostrar modal
        console.log('Mostrando modal...');
        modal.style.display = "flex";
      });
    });

    // Cerrar modal
    closeBtn.addEventListener("click", (e) => {
      e.preventDefault();
      modal.style.display = "none";
    });

    // También cerrar si clickea afuera
    modal.addEventListener("click", (e) => {
      if (e.target === modal) {
        modal.style.display = "none";
      }
    });
  });

  // Limpiar filtros
  document.addEventListener("DOMContentLoaded", function () {
      const botonLimpiar = document.getElementById("limpiar-filtros");

      if (botonLimpiar) {
        botonLimpiar.addEventListener("click", function () {
          // Encuentra el formulario que contiene los filtros
          const form = botonLimpiar.closest("form");

          if (form) {
            // Limpia todos los campos del formulario
            const inputs = form.querySelectorAll("input, select, textarea");
            inputs.forEach((input) => {
              if (input.type === "checkbox" || input.type === "radio") {
                input.checked = false;
              } else {
                input.value = "";
              }
            });

            // Espera un momento antes de recargar sin filtros
            setTimeout(() => {
              const urlSinParametros = window.location.origin + window.location.pathname;
              window.location.href = urlSinParametros;
            }, 100);
          }
        });
      }
    });
</script>

 
  <footer>
    &copy; 2025 Ferremateriales el Maestro - v2.3.7
  </footer>

</body>
</html>



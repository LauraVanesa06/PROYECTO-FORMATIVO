<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Habilitar/deshabilitar campos de cantidad segÃºn checkbox
    document.querySelectorAll('.product-checkbox').forEach(checkbox => {
      checkbox.addEventListener('change', function() {
        const productId = this.id.replace('select_', '');
        const cantidadInput = document.querySelector(`input[data-product-cantidad="${productId}"]`);
        const productCard = this.closest('.product-card');
        
        if (this.checked) {
          cantidadInput.disabled = false;
          cantidadInput.focus();
          productCard.classList.add('selected');
        } else {
          cantidadInput.disabled = true;
          cantidadInput.value = '';
          productCard.classList.remove('selected');
        }
      });
    });

    // ValidaciÃ³n del formulario
    const formVenta = document.getElementById('form-venta-fisica');
    if (formVenta) {
      formVenta.addEventListener('submit', function(e) {
        const clienteInput = document.querySelector('input[name="buy[cliente]"]');
        
        // Validar que el cliente no estÃ© vacÃ­o
        if (!clienteInput.value.trim()) {
          e.preventDefault();
          alert('Por favor, ingrese el nombre del cliente');
          clienteInput.focus();
          return false;
        }

        // Validar que al menos un producto estÃ© seleccionado
        const productosSeleccionados = document.querySelectorAll('.product-checkbox:checked');
        
        if (productosSeleccionados.length === 0) {
          e.preventDefault();
          alert('Por favor, seleccione al menos un producto');
          return false;
        }

        // Validar que los productos seleccionados tengan cantidad
        let cantidadValida = true;
        productosSeleccionados.forEach(checkbox => {
          const productId = checkbox.id.replace('select_', '');
          const cantidadInput = document.querySelector(`input[data-product-cantidad="${productId}"]`);
          
          if (!cantidadInput.value || parseInt(cantidadInput.value) <= 0) {
            cantidadValida = false;
          }
        });

        if (!cantidadValida) {
          e.preventDefault();
          alert('Por favor, ingrese una cantidad vÃ¡lida para todos los productos seleccionados');
          return false;
        }

        return true;
      });
    }
  });
</script>



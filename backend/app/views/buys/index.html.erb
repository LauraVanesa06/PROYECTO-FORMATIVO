<script>
document.addEventListener("DOMContentLoaded", function() {

  // SOLO PARA MODAL DE DETALLES
  document.querySelectorAll(".show-buy").forEach(btn => {
    btn.addEventListener("click", async function(e) {

      const buyId = btn.dataset.buyId;

      // Datos básicos
      const tipo = (btn.dataset.tipo || '').toString();
      const metodo = btn.dataset.metodo || 'Efectivo';

      let nombre = btn.dataset.clientName || btn.dataset.userName || 'Sin cliente';
      let email  = btn.dataset.clientEmail || btn.dataset.userEmail || 'Sin correo';

      // Llenar modal
      document.querySelector(".modal-nombre-cliente").textContent = nombre;
      document.querySelector(".modal-documento-cliente").textContent = email;
      document.querySelector(".modal-metodo-compra").textContent = metodo;
      document.querySelector(".modal-fecha-compra").textContent = btn.dataset.fechaCompra || "";

      // Cargar productos
      const lista = document.getElementById("modal-productos-lista");
      const precioTotalEl = document.querySelector(".modal-precio-producto");
      lista.innerHTML = '<p style="text-align:center;padding:18px;color:#6b7280">Cargando productos...</p>';

      try {
        const resp = await fetch(`/buys/${buyId}/productos`);
        const productos = await resp.json();

        if (!productos.length) {
          lista.innerHTML = '<p style="text-align:center;padding:20px;color:#7f8c8d">No hay productos en esta venta</p>';
          precioTotalEl.textContent = 'COP 0,00';
        } else {
          lista.innerHTML = productos.map(p => `
            <div class="product-compact" style="display:flex;gap:12px;padding:10px;border-bottom:1px solid #e5e7eb">
              <div style="width:50px;height:50px">
                ${p.imagen ? `<img src="${p.imagen}" style="width:100%;height:100%;object-fit:cover;border-radius:6px">`
                  : '<i class="fas fa-box" style="font-size:20px;color:#2563eb"></i>'}
              </div>
              <div style="flex:1">
                <div style="font-weight:600">${p.nombre}</div>
                <div style="font-size:12px;color:#6b7280">${p.cantidad} × ${p.precio_unitario}</div>
              </div>
              <div style="font-weight:700;color:#1e3a8a">${p.subtotal}</div>
            </div>
          `).join('');

          const total = productos.reduce((acc, p) => {
            const num = p.subtotal.replace(/[^\d,.-]/g,'').replace(/\./g,'').replace(',','.');
            return acc + parseFloat(num || 0);
          }, 0);

          precioTotalEl.textContent = `COP ${total.toLocaleString('es-CO', {minimumFractionDigits:2})}`;
        }

      } catch (err) {
        lista.innerHTML = '<p style="color:red;text-align:center;padding:20px">Error al cargar productos</p>';
        precioTotalEl.textContent = 'COP 0,00';
      }

    });
  });

});
</script>


<script>
document.addEventListener("DOMContentLoaded", function(){

  // FILTRAR POR NOMBRE O CÓDIGO
  document.getElementById("filtroProducto").addEventListener("keyup", function(){
    let valor = this.value.toLowerCase();
    document.querySelectorAll(".producto-card").forEach(card => {
      let nombre = card.dataset.nombre;
      let codigo = card.dataset.codigo;
      card.style.display = (nombre.includes(valor) || codigo.includes(valor)) ? "block" : "none";
    });
  });

  // FILTRAR POR CÓDIGO EXACTO
  document.getElementById("codigoBusqueda").addEventListener("keyup", function(){
    let valor = this.value.toLowerCase();
    document.querySelectorAll(".producto-card").forEach(card => {
      card.style.display = card.dataset.codigo.startsWith(valor) ? "block" : "none";
    });
  });

  // SELECCIONAR PRODUCTO
  document.querySelectorAll(".seleccionar-producto").forEach(btn => {
    btn.addEventListener("click", function(){

      const id = this.dataset.productId;
      const nombre = this.dataset.productName;
      const precio = parseFloat(this.dataset.productPrice);

      let tabla = document.querySelector("#tabla-seleccionados tbody");

      // Agregar fila
      tabla.insertAdjacentHTML("beforeend", `
        <tr data-price="${precio}">
          <td>${nombre} <input type="hidden" name="productos[][id]" value="${id}"></td>
          <td>
            <input type="number" class="form-control cantidad" name="productos[][cantidad]" value="1" min="1">
          </td>
          <td>${precio}</td>
          <td class="subtotal">${precio}</td>
          <td><button type="button" class="btn btn-danger btn-sm eliminar">X</button></td>
        </tr>
      `);

      actualizarTotal();
    });
  });

  // CAMBIAR CANTIDAD
  document.addEventListener("input", function(e){
    if(e.target.classList.contains("cantidad")){
      let fila = e.target.closest("tr");
      let precio = parseFloat(fila.dataset.price);
      let cantidad = parseInt(e.target.value);
      fila.querySelector(".subtotal").innerText = precio * cantidad;
      actualizarTotal();
    }
  });

  // ELIMINAR PRODUCTO
  document.addEventListener("click", function(e){
    if(e.target.classList.contains("eliminar")){
      e.target.closest("tr").remove();
      actualizarTotal();
    }
  });

  function actualizarTotal(){
    let total = 0;
    document.querySelectorAll(".subtotal").forEach(s => total += parseFloat(s.innerText));
    document.getElementById("total-venta").innerText = total;
  }

});
</script>



<div id="<%= dom_id buy %>" class="buy-id">
  <div>
      <p>
      <strong>Id de venta:</strong>
      <%= buy.id %>
    </p>

    <p>
      <strong>Nombre del cliente:</strong>
      <%= buy.customer.nombre %>
    </p>

    <p>
      <strong>Fecha de la compra:</strong>
      <%= buy.fecha %>
    </p>

  </div>
  <div class="boton-ver">
      <% buy.purchasedetails.each do |p| %>
        <button class="show-buy"
          data-nombre-producto="<%= p.product.nombre %>"
          data-categoria-producto="<%= p.product.category.nombre %>"
          data-proveedor-producto="<%= p.product.supplier.nombre %>"
          data-precio-producto="<%= p.product.precio %>"
          data-nombre-cliente="<%= p.buy.customer.nombre %>"
          data-documento-cliente="<%= p.buy.customer.documento %>"
          data-fecha-compra="<%= p.buy.fecha.strftime("%d/%m/%Y") %>"
          data-tipo-compra="<%= p.buy.tipo %>"
          data-metodo-compra="<%= p.buy.metodo_pago %>"
          data-img-url="<%= p.product.imagen.attached? ? url_for(p.product.imagen) : '' %>">
          Ver compra
        </button>
      <% end %>
    </div>
</div>
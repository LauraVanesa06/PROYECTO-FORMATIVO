<div class="container mt-4">
  <div id="notification" class="alert alert-success text-center position-fixed top-0 start-50 translate-middle-x mt-3 shadow"
      style="display: none; z-index: 1055;">
  </div>

  <div class="section-header">
    <h2 class="titulo">★ <%= t("favorites.title") %></h2>
    <center><hr class="linea-bonita"></center>
  </div>

  <% if @favorites.any? %>
  <div class="product-grid" style="display: grid; grid-template-columns: repeat(5, 1fr); gap: 24px;">
      <% @favorites.each do |favorite| %>
        <div class="product-card <%= 'product-no-disponible' unless favorite.product.disponible %>" data-producto-id="<%= favorite.product.id %>">
          
          <% unless favorite.product.disponible %>
            <div class="badge-no-disponible">
              No disponible
            </div>
          <% end %>

          <!-- Imagen -->
          <div class="product-thumb">
            <% if favorite.product.images.attached? %>
              <%= image_tag(favorite.product.images.first, alt: favorite.product.nombre, class: "img-fluid") %>
            <% else %>
              <%= image_tag "ProductoNoDisponible.png", alt: t('productos.sin_imagen'), class: "img-fluid" %>
            <% end %>
            
            <% unless favorite.product.disponible %>
              <div class="overlay-no-disponible">
                <p class="mt-2">Temporalmente no disponible</p>
              </div>
            <% end %>
          </div>

          <!-- Detalles -->
          <div class="product-body">
            <div class="info-product">
              <h3 class="product-name"><%= favorite.product.nombre %></h3>
              <p class="product-desc"><%= truncate(favorite.product.descripcion, length: 80) %></p>
            </div>

            <div class="product-meta">
              <span class="price"><%= favorite.product.precio_cop %></span>

              <div class="d-flex flex-wrap gap-2 mt-2">
                <% if favorite.product.disponible %>
                  <!-- Botón comprar -->
                  <button 
                    class="btn btn-sm btn-outline-primary d-flex align-items-center justify-content-center add-to-cart-btn" 
                    data-url="<%= cart_items_path(product_id: favorite.product.id) %>" 
                    type="button"
                    style="width: 38px; height: 36px; min-width: 38px; padding: 0;">
                    <i class="fa-solid fa-cart-plus"></i>
                  </button>
                <% else %>
                  <!-- Botón deshabilitado si no está disponible -->
                  <button class="btn btn-sm btn-secondary d-flex align-items-center justify-content-center" disabled style="width: 38px; height: 36px; min-width: 38px; padding: 0;">
                    <i class="fa-solid fa-cart-plus"></i>
                  </button>
                <% end %>

                <!-- Botón quitar de favoritos -->
                <button 
                  class="btn btn-sm btn-warning d-flex align-items-center gap-1 favorite-btn" 
                  data-url="<%= favorite_path(favorite) %>"
                  data-method="delete"
                  data-product-id="<%= favorite.product.id %>">
                  <i class="fa-solid fa-star"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p><%= t("favorites.empty") %></p>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="productoModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalProductoNombre"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body d-flex flex-column flex-md-row">
        <img id="modalProductoImagen" src="" class="img-fluid me-3 mb-3 mb-md-0" style="max-width: 250px;">
        <div>
          <p id="modalProductoDescripcion"></p>
          <p class="fw-bold fs-5" id="modalProductoPrecio"></p>
        </div>
      </div>
      <div class="modal-footer">
        <form id="modalCompraForm" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-cart-plus"></i> <%= t("productos.boton.comprar") %>
          </button>
        </form>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t("productos.boton.cerrar") %></button>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
  const notification = document.getElementById('notification');

  //  Mostrar notificación animada
  function showNotification(message, type = 'success') {
    notification.textContent = message;
    notification.className = `alert alert-${type} text-center position-fixed top-0 start-50 translate-middle-x mt-3 shadow`;
    notification.style.display = 'block';
    notification.style.opacity = 0;
    setTimeout(() => notification.style.opacity = 1, 50);
    setTimeout(() => {
      notification.style.opacity = 0;
      setTimeout(() => notification.style.display = 'none', 300);
    }, 2500);
  }

  //  Agregar al carrito sin recargar
  document.addEventListener('click', async (e) => {
    const btn = e.target.closest('.add-to-cart');
    if (!btn) return;

    e.preventDefault();
    const form = btn.closest('form');

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        headers: {
          'X-CSRF-Token': csrfToken,
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        const data = await response.json();

        //  Actualiza contador del carrito
        const cartCount = document.getElementById('cart_count');
        if (cartCount && data.count !== undefined) {
          cartCount.textContent = data.count;
        }

        //  Actualiza el contenido del carrito lateral (offcanvas)
        const cartOffcanvasBody = document.getElementById('cart-offcanvas-body');
        if (cartOffcanvasBody && data.cart_html) {
          cartOffcanvasBody.innerHTML = data.cart_html;
        }

        showNotification('Producto agregado al carrito');
      } else {
        showNotification('⚠️ Error al agregar al carrito', 'danger');
      }
    } catch (error) {
      console.error(error);
      showNotification('⚠️ Error de conexión', 'danger');
    }
  });

  //  Eliminar de favoritos sin recargar
  document.addEventListener('click', async (e) => {
    const btn = e.target.closest('.remove-favorite');
    if (!btn) return;

    e.preventDefault();
    const form = btn.closest('form');
    const card = btn.closest('.product-card');

    try {
      const response = await fetch(form.action, {
        method: 'DELETE',
        headers: {
          'X-CSRF-Token': csrfToken,
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        card.remove();
        showNotification('Eliminado de favoritos');
      } else {
        showNotification('⚠️ No se pudo eliminar', 'danger');
      }
    } catch (error) {
      console.error(error);
      showNotification('⚠️ Error de conexión', 'danger');
    }
  });

  // Click en la tarjeta → ir a producto_show dinámicamente (solo si está disponible)
  document.addEventListener("click", (e) => {
    const card = e.target.closest(".product-card");
    if (!card) return;
    
    // Ignorar clicks en botones, iconos o formularios
    if (e.target.closest("button") || e.target.closest("i") || e.target.closest("form")) return;
    
    // Validación: No permitir clic si el producto no está disponible
    if (card.classList.contains('product-no-disponible')) {
      e.preventDefault();
      showNotification('⚠️ Este producto no está disponible actualmente', 'warning');
      return;
    }
    
    // Cargar dinámicamente
    const productoId = card.dataset.productoId;
    if (typeof loadProductDetails === 'function') {
      loadProductDetails(productoId);
    } else {
      // Fallback a navegación normal si no está disponible la función
      window.location = `/home/producto_show?id=${productoId}`;
    }
  });
});
</script>

<style>
/* Estilos para productos no disponibles en favoritos */
.product-no-disponible {
  position: relative;
  opacity: 0.75;
  filter: grayscale(30%);
}

.badge-no-disponible {
  position: absolute;
  top: 10px;
  right: 10px;
  background: linear-gradient(135deg, #ff6b6b, #dc3545);
  color: white;
  padding: 8px 15px;
  border-radius: 20px;
  font-weight: 600;
  font-size: 12px;
  z-index: 10;
  box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
  animation: pulse-badge 2s infinite;
}

@keyframes pulse-badge {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.overlay-no-disponible {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(65, 65, 65, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 8px;
}

.product-thumb:hover .overlay-no-disponible {
  opacity: 1;
}

.overlay-no-disponible i {
  color: #ffc107;
  animation: shake 1s infinite;
}

@keyframes shake {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.overlay-no-disponible p {
  font-size: 14px;
  font-weight: 600;
  text-align: center;
  margin: 0;
}

/* Botón deshabilitado */
.product-no-disponible .btn-secondary {
  cursor: not-allowed;
  opacity: 0.6; 
  position: relative !important;
  border-radius: 6px !important;
  top: 0px !important;
  left: 0px !important;
  border: #292727 1px solid !important;
  height: 24px !important;
}

/* Destacar productos disponibles */
.product-card:not(.product-no-disponible) {
  border: 2px solid transparent;
  transition: all 0.3s ease;
}

.product-card:not(.product-no-disponible):hover {
  border-color: #28a745;
  box-shadow: 0 8px 20px rgba(40, 167, 69, 0.2);
}
</style>

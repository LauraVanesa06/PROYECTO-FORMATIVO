<!-- PRODUCTOS -->
<section id="productos" class="productos-destacados container mt-4 mb-5">
  <h2 class="titulo">üõ†Ô∏è <%= t('productos.titulo') %></h2>
  <br>
  <!-- FILTRO -->
  <div class="mb-4">
    <%= form_with url: productos_path, method: :get, local: true do %>
      <div class="row align-items-center g-3">  

        <div class="col-md-3">
          <%= label_tag :category_id, t('productos.filtro.categoria') %>
          <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :nombre, params[:category_id]),
                        include_blank: t('productos.filtro.todas_categorias'),
                        class: "form-select" %>
        </div>

        <div class="col-md-3">
          <%= label_tag :query, t('productos.filtro.buscar_nombre') %>
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: t('productos.filtro.placeholder_nombre') %>
        </div>

        <div class="col-md-2">
          <%= label_tag :min_price, t('productos.filtro.precio_minimo') %>
          <%= number_field_tag :min_price, params[:min_price], min: 0, step: 0.01, class: "form-control" %>
        </div>

        <div class="col-md-2">
          <%= label_tag :max_price, t('productos.filtro.precio_maximo') %>
          <%= number_field_tag :max_price, params[:max_price], min: 0, step: 0.01, class: "form-control" %>
        </div>

        <div class="col-md-2 d-flex align-items-end">
          <%= submit_tag t('productos.filtro.boton_filtrar'), class: "btn btn-primary w-100" %>
        </div>

      </div>
    <% end %>
  </div>

  <div class="product-grid">
    <% @productos.each do |producto| %>
      <div class="product-card" onclick="window.location='<%= product_path(producto) %>'" style="cursor:pointer;">

        <!-- Imagen del producto -->
        <div class="product-thumb">
          <% if producto.images.attached? %>
            <%= image_tag(producto.images.first, 
                        alt: producto.nombre, 
                        class: "img-fluid")%>
          <% else %>
            <%= image_tag "ProductoNoDisponible.png",
                          alt: t('productos.sin_imagen'),
                          class: "img-fluid" %>
          <% end %>
        </div>

        <!-- Detalles del producto -->
        <div class="product-body">
          <div class="info-product">
            <h3 class="product-name"><%= producto.nombre %></h3>
            <p class="product-desc"><%= truncate(producto.descripcion, length: 80) %></p>
          </div>
          <div class="product-meta">
            <span class="price">
             $ <%= producto.precio_cop %> COP
            </span>
            <div class="d-flex flex-wrap gap-2 mt-2">

              <!-- Bot√≥n comprar -->
              <%= button_to cart_items_path(product_id: producto.id),
                            method: :post,
                            remote: true,
                            class: "btn btn-sm btn-outline-primary d-flex align-items-center justify-content-center",
                            title: t('productos.boton.comprar') do %>
                <i class="fa-solid fa-cart-plus"></i>
              <% end %>

              <!-- Bot√≥n favoritos -->
              <% if current_user %>
                <% favorite = current_user.favorites.find_by(product_id: producto.id) %>
                <% if favorite %>
                  <%= button_to favorite_path(favorite),
                                method: :delete,
                                class: "btn btn-sm btn-warning d-flex align-items-center gap-1",
                                title: t('productos.boton.quitar_favorito') do %>
                    <i class="fa-solid fa-star"></i>
                  <% end %>
                <% else %>
                  <%= button_to favorites_path(product_id: producto.id),
                                method: :post,
                                class: "btn btn-sm btn-outline-warning d-flex align-items-center gap-1",
                                title: t('productos.boton.agregar_favorito') do %>
                    <i class="fa-regular fa-star"></i>
                  <% end %>
                <% end %>
              <% else %>
                <button class="btn btn-sm btn-outline-warning d-flex align-items-center gap-1" disabled
                        title="<%= t('productos.boton.inicia_sesion_favoritos') %>">
                  <i class="fa-regular fa-star"></i>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script>
function initProductoModal() {
  const modal = document.getElementById("productoModal");
  if (!modal) return;

  const nombreEl = document.getElementById("modalProductoNombre");
  const descEl = document.getElementById("modalProductoDescripcion");
  const precioEl = document.getElementById("modalProductoPrecio");
  const imgEl = document.getElementById("modalProductoImagen");
  const formEl = document.getElementById("modalCompraForm");

  document.querySelectorAll(".ver-mas-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      nombreEl.textContent = btn.dataset.nombre || "";
      descEl.textContent = btn.dataset.descripcion || "";
      precioEl.textContent = btn.dataset.precio || "";
      imgEl.src = btn.dataset.imagen || "";
      formEl.action = btn.dataset.urlCompra || "#";
    });
  });
}

document.addEventListener("turbo:load", initProductoModal);
document.addEventListener("DOMContentLoaded", initProductoModal);
</script>

<!-- Modal -->
<div class="modal fade" id="productoModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalProductoNombre"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body d-flex flex-column flex-md-row">
        <img id="modalProductoImagen" src="" class="img-fluid me-3 mb-3 mb-md-0" style="max-width: 250px;">
        <div>
          <p id="modalProductoDescripcion"></p>
          <p class="fw-bold fs-5" id="modalProductoPrecio"></p>
        </div>
      </div>
      <div class="modal-footer">
        <form id="modalCompraForm" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-cart-plus"></i> <%= t('productos.boton.comprar') %>
          </button>
        </form>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('productos.boton.cerrar') %></button>
      </div>
    </div>
  </div>
</div>


 <!-- HERO -->
<section class="hero-header">

  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "promo1.png", class: "d-block w-100 carousel-img" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "promo2.jpeg", class: "d-block w-100 carousel-img" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "promo3.jpeg", class: "d-block w-100 carousel-img" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "promo4.jpg", class: "d-block w-100 carousel-img" %>
      </div>
    </div>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden"><%= t("hero.prev") %></span>
  </button>

  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden"><%= t("hero.next") %></span>
  </button>
</section>

<!-- CATEGORÍAS -->
<section class="categories-section container mt-4">
  <h2 class="titulo"><%= t("categories.title") %></h2>
  <div class="category-scroll" role="list">
    <% @categories.each do |c| %>
      <div class="category-card" role="listitem">
        <%= link_to c.nombre, productos_path(category_id: c.id), class: "category-link" %>
      </div>
    <% end %>
  </div>
</section>

<!-- PRODUCTOS -->
<section id="productos" class="productos-destacados container mt-4 mb-5">
  <h2 class="titulo"><%= t("products.title") %></h2>
  <div class="product-grid">
    <% @productos.each do |producto| %>
      <div class="product-card" onclick="window.location='<%= product_path(producto.id) %>'" style="cursor:pointer;">
        <div class="product-thumb">
          <%= image_tag(
      producto.images.attached? ? url_for(producto.images.first) : "martillo-dewalt.png",
      alt: producto.nombre,
      class: "img-fluid"
    ) %>
        </div>
        <div class="product-body">
          <div class="info-product">
            <h3 class="product-name"><%= producto.nombre %></h3>
            <p class="product-desc"><%= truncate(producto.descripcion, length: 80) %></p>
          </div>
          <div class="product-meta">
            <span class="price">
              $ <%= producto.precio_cop %> COP
            </span>
            <div>
              <div class="d-flex flex-wrap gap-2 mt-2">

                <!-- Botón comprar -->
                <%= button_to cart_items_path(product_id: producto.id),
                    method: :post,
                    remote: true,
                    class: "btn btn-sm btn-outline-primary d-flex align-items-center justify-content-center" do %>
                  <i class="fa-solid fa-cart-plus"></i>
                <% end %>

                <!-- Botón favoritos -->
                <% if current_user %>
                  <% favorite = current_user.favorites.find_by(product_id: producto.id) %>
                  <% if favorite %>
                    <%= button_to favorite_path(favorite),
                                  method: :delete,
                                  class: "btn btn-sm btn-warning d-flex align-items-center gap-1" do %>
                      <i class="fa-solid fa-star"></i>
                    <% end %>
                  <% else %>
                    <%= button_to favorites_path(product_id: producto.id),
                                  method: :post,
                                  class: "btn btn-sm btn-outline-warning d-flex align-items-center gap-1" do %>
                      <i class="fa-regular fa-star"></i>
                    <% end %>
                  <% end %>
                <% else %>
                  <!-- Si no hay usuario logueado -->
                  <button class="btn btn-sm btn-outline-warning d-flex align-items-center gap-1" disabled>
                    <i class="fa-regular fa-star"></i>
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<!-- Modal -->
<div class="modal fade" id="productoModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalProductoNombre"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body d-flex flex-column flex-md-row">
        <img id="modalProductoImagen" src="" class="img-fluid me-3 mb-3 mb-md-0" style="max-width: 250px;">
        <div>
          <p id="modalProductoDescripcion"></p>
          <p class="fw-bold fs-5" id="modalProductoPrecio"></p>
        </div>
      </div>
      <div class="modal-footer">
        <form id="modalCompraForm" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-cart-plus"></i> <%= t("products.buy") %>
          </button>
        </form>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t("products.close") %></button>
      </div>
    </div>
  </div>
</div>

<!-- TOASTS -->
<div id="toast-container"></div>

<script>

function initProductoModal() {
  const modal = document.getElementById("productoModal");
  if (!modal) return;

  const nombreEl = document.getElementById("modalProductoNombre");
  const descEl = document.getElementById("modalProductoDescripcion");
  const precioEl = document.getElementById("modalProductoPrecio");
  const imgEl = document.getElementById("modalProductoImagen");
  const formEl = document.getElementById("modalCompraForm");

  document.querySelectorAll(".ver-mas-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      nombreEl.textContent = btn.dataset.nombre || "";
      descEl.textContent = btn.dataset.descripcion || "";
      precioEl.textContent = btn.dataset.precio || "";
      imgEl.src = btn.dataset.imagen || "";
      formEl.action = btn.dataset.urlCompra || "#";
    });
  });
}

// Funciona tanto con Turbo como sin él
document.addEventListener("turbo:load", initProductoModal);
document.addEventListener("DOMContentLoaded", initProductoModal);

</script>
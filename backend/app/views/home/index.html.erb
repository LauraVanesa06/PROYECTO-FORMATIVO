<!-- HERO -->
<section class="hero-header">
  <div class="hero-text">
    <h1>Ferremateriales El Maestro</h1>
    <p>Todo en herramientas y materiales â€” calidad y buen precio</p>
    <a href="#productos" class="btn btn-primary hero-cta">Ver productos</a>
  </div>
</section>

<!-- CATEGORÃAS -->
<section class="categories-section container mt-4">
  <h2 class="titulo">ğŸ” CategorÃ­as</h2>
  <div class="category-scroll" role="list">
    <% @categories.each do |c| %>
      <div class="category-card" role="listitem">
        <%= link_to c.nombre, category_path(c), class: "category-link" %>
      </div>
    <% end %>
  </div>
</section>

<!-- PRODUCTOS -->
<section id="productos" class="productos-destacados container mt-4 mb-5">
  <h2 class="titulo">ğŸ”¥ Productos destacados</h2>
  <div class="product-grid">
    <% @productos.each do |producto| %>
      <div class="product-card">
        <div class="product-thumb">
          <%= image_tag(producto.imagen.presence || "martillo-dewalt.png", alt: producto.nombre, class: "img-fluid") %>
          <button class="fav-btn" data-product-id="<%= producto.id %>">
            <i class="fa-regular fa-heart"></i>
          </button>
        </div>
        <div class="product-body">
          <h3 class="product-name"><%= producto.nombre %></h3>
          <p class="product-desc"><%= truncate(producto.descripcion, length: 80) %></p>
          <div class="product-meta">
            <span class="price"><%= number_to_currency(producto.precio, unit: "$", separator: ".", delimiter: ",") %></span>
            <div>
              <button class="btn btn-sm btn-outline-primary add-cart" data-product-id="<%= producto.id %>" data-product-name="<%= j producto.nombre %>" data-product-price="<%= producto.precio %>">
                <i class="fa-solid fa-cart-plus"></i>
              </button>
              <%= link_to "Ver", product_path(producto), class: "btn btn-sm btn-secondary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>


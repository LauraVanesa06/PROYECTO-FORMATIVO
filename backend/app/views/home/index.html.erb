<!-- HERO -->
<section class="hero-header">
  <div class="hero-text">
    <h1>Ferremateriales El Maestro</h1>
    <p>Todo en herramientas y materiales ‚Äî calidad y buen precio</p>
    <a href="#productos" class="btn btn-primary hero-cta">Ver Mas</a>
  </div>
</section>

<!-- CATEGOR√çAS -->
<section class="categories-section container mt-4">
  <h2 class="titulo">üîç Categor√≠as</h2>
  <div class="category-scroll" role="list">
    <% @categories.each do |c| %>
      <div class="category-card" role="listitem">
        <%= link_to c.nombre, category_path(c), class: "category-link" %>
      </div>
    <% end %>
  </div>
</section>

<!-- PRODUCTOS -->
<section id="productos" class="productos-destacados container mt-4 mb-5">
  <h2 class="titulo">üî• Productos destacados</h2>
  <div class="product-grid">
    <% @productos.each do |producto| %>
      <div class="product-card">
        <div class="product-thumb">
          <%= image_tag(producto.imagen.presence || "martillo-dewalt.png", 
                        alt: producto.nombre, 
                        class: "img-fluid") %>
        </div>
        <div class="product-body">
          <h3 class="product-name"><%= producto.nombre %></h3>
          <p class="product-desc"><%= truncate(producto.descripcion, length: 80) %></p>
          <div class="product-meta">
            <span class="price">
              <%= number_to_currency(producto.precio, unit: "$", separator: ".", delimiter: ",") %>
            </span>
            <div>
              <div class="d-flex justify-content-between">
                <%= button_to add_item_cart_path(producto), method: :post, class: "btn btn-sm btn-outline-primary" do %>
                  <i class="fa-solid fa-cart-plus"></i>
                <% end %>
                <button class="btn btn-sm btn-secondary ver-mas-btn"
                  data-bs-toggle="modal"
                  data-bs-target="#productoModal"
                  data-nombre="<%= producto.nombre %>"
                  data-descripcion="<%= producto.descripcion %>"
                  data-precio="<%= number_to_currency(producto.precio, unit: '$', separator: '.', delimiter: ',') %>"
                  data-imagen="<%= url_for(producto.imagen.presence || 'martillo-dewalt.png') %>"
                  data-url-compra="<%= add_item_cart_path(producto) %>">
                  Ver detalles
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script>

document.addEventListener("turbo:load", () => {
  const modal = document.getElementById("productoModal");
  modal.addEventListener("show.bs.modal", (event) => {
    const button = event.relatedTarget;
    document.getElementById("modalProductoNombre").textContent = button.getAttribute("data-nombre");
    document.getElementById("modalProductoDescripcion").textContent = button.getAttribute("data-descripcion");
    document.getElementById("modalProductoPrecio").textContent = button.getAttribute("data-precio");
    document.getElementById("modalProductoImagen").src = button.getAttribute("data-imagen");
    document.getElementById("modalCompraForm").action = button.getAttribute("data-url-compra");
  });
});

</script>


<!-- Modal -->
<div class="modal fade" id="productoModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalProductoNombre"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body d-flex flex-column flex-md-row">
        <img id="modalProductoImagen" src="" class="img-fluid me-3 mb-3 mb-md-0" style="max-width: 250px;">
        <div>
          <p id="modalProductoDescripcion"></p>
          <p class="fw-bold fs-5" id="modalProductoPrecio"></p>
        </div>
      </div>
      <div class="modal-footer">
        <form id="modalCompraForm" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-cart-plus"></i> Comprar
          </button>
        </form>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>


<!-- TOASTS -->
<div id="toast-container"></div>

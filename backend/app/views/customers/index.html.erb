<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard Ferretería</title>
  <%= favicon_link_tag 'header-icon.png' %>
  <%= stylesheet_link_tag "dashboard", media: "all" %>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag "clientes" %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Eczar:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

  <header>
    <div class="container-header">
      <button class="hamburger" id="hamburger">&#9776;</button>
      <div id="control">
        <div class="panel"><%= image_tag "panel-control.png", class: "c-panel" %></div>
        <p class="pricipal">Panel de Control</p>
      </div>
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path, method: :delete, form: { data: { turbo: true } }, id: "cerrar", class: "logout2" do %>
          <span><i class="fas fa-sign-out-alt" style="color: white"></i></span>
        <% end %>
      <% end %>
    </div>
  </header>

  <nav class="nav-bg">
    <div class="container-nav">
      <ul class="menu" id="menu">
        <li><a href="../dashboard"class="link-menu">Inicio</a></li>
        <li><a href="../dashboard/productos"class="link-menu">Productos</a></li>
        <li><a href="../dashboard/ventas"class="link-menu">Ventas</a></li>
        <li><a href="../dashboard/suppliers"class="link-menu">Proveedores</a></li>
        <li><a href="../dashboard/clientes"class="link-menu">Clientes</a></li>
        <li><a href="../dashboard/help"class="link-menu">Ayuda</a></li>
      </ul>
      <div>
          <% if user_signed_in? %>
            <%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete, form: { data: { turbo: true } }, id: "cerrar", class: "logout"%>
          <% end %>
        </div>
    </div>
  </nav>
  <section class="madre">
    <div class="filt">
      <div class="cont-volver">
        <a href="clientes" class="a-volver" style="text-decoration:none;"><i class="fas fa-arrow-left" id="vol"></i></a>
      </div>
      <div class="filtro">
        <p class=p><i class="fas fa-filter"></i> Filtros</p>
        <div class="div">
          <%= form_tag clientes_path, class:"filtros", method: :get do %>
            <div class="filtro-id">
              <%= label_tag :documento, "CC:" %>
              <%= text_field_tag :documento, params[:documento], placeholder: "Ej: 123456", size: 12, style:"border-radius:10px; padding-left: 10px; border:1px solid grey;" %>
            </div>
            <div class="filtro-fecha">
              <%= label_tag :fecha, "Fecha:" %>
              <%= text_field_tag :year, params[:year], placeholder: "AAAA", size: 4, style:"border-radius:10px; padding-left: 10px; border:1px solid grey;" %>
              <%= text_field_tag :month, params[:month], placeholder: "MM", size: 2, style:"border-radius:10px; padding-left: 10px; border:1px solid grey;" %>
              <%= text_field_tag :day, params[:day], placeholder: "DD", size: 2, style:"border-radius:10px; padding-left: 10px; border:1px solid grey;" %>
            </div>
            <div>
              <button id="limpiar-filtros" type="button" class="btn">
                <i class="fas fa-broom"></i>
              </button>
            </div>
            <div>
              <%= button_tag type: 'submit', class: 'btn', name: '' do %>
                <i class="fas fa-search"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <section class="contenedor">
      <aside class="clientes">
        <div class="div-customer">Todas las fechas de compra:</div>
        <article class=compras>
          
          <% if @purchasedetails.present? && @purchasedetails.any? %>
            <% @purchasedetails.each do |p| %>
              <div class="compra-info open-detail-btn" 
                data-cliente-id="<%= p.buy.customer.id %>"
                data-cliente-nombre="<%= p.buy.customer.nombre %>"
                data-cliente-documento="<%= p.buy.customer.documento %>"
                data-cliente-telefono="<%= p.buy.customer.telefono %>"
                data-producto-id="<%= p.product.id %>"
                data-producto-nombre="<%= p.product.nombre %>"
                data-producto-descripcion="<%= p.product.descripcion %>"
                data-producto-precio="<%= p.product.precio_cop %>"
                data-producto-precioxunidad="<%= p.preciounidad %>"
                data-producto-categoria="<%= p.product.category.nombre %>"
                data-producto-proveedor="<%= p.product.supplier.nombre %>"
                data-compra-id="<%= p.buy_id %>"
                data-compra-fecha="<%= p.buy.fecha.strftime("%d/%m/%Y") %>"
                data-compra-cantidad="<%= p.cantidad %>"
                data-compra-proveedor="<%= p.product.supplier.contacto %>"
                data-edit-url="<%= edit_purchasedetail_path(p) %>"
                data-producto-img-url="<%= p.product.images.attached? ? url_for(p.product.images.first) : '' %>">
                <p class=p-id><strong>ID:</strong> <%= p.buy_id %></p>
                <p class=p-fecha><%= p.buy.fecha.strftime("%d/%m/%Y") %></p>
              </div>
            <% end %>
          <% end %>
      </aside>
      <section class="cont-facturas">
        <% if flash[:alert] %>
          <div id="mensaje-alerta" class="alerta-filtro">
            <%= flash[:alert] %>
          </div>

          <script>
            function hideAlert() {
              const alerta = document.getElementById('mensaje-alerta');
              if (!alerta) return;
              // esperar 4s y luego remover el nodo
              setTimeout(() => alerta.remove(), 4000);
            }

            document.addEventListener('DOMContentLoaded', hideAlert);
            // Si usás Turbo (Rails 7), también escuchamos su evento
            document.addEventListener('turbo:load', hideAlert);
          </script>
        <% end %>
        <div id="purcha">
            <div class="div-purchase" style="display: none;">
              <%= render 'purchasedetails/modal' %>
            </div>
        </div>
      </section>
    </section>
  </section>
  <footer>
    &copy; 2025 Ferremateriales el Maestro - v2.3.7
  </footer>

  <script>
      const btn = document.getElementById("hamburger");
      const menu = document.getElementById("menu");

      btn.addEventListener("click", () => {
        menu.classList.toggle("active");
      });
  </script>
  <script>
    function mostrarDetalle(id) {
      const detalles = document.querySelectorAll('.div-purchase');
      detalles.forEach(function(div) {
        div.style.display = 'none';
      });

      const seleccionado = document.getElementById(id);
      if (seleccionado) {
        seleccionado.style.display = 'block';
      }
    }

    //borrar filtros

      document.addEventListener("DOMContentLoaded", function () {
      const botonLimpiar = document.getElementById("limpiar-filtros");

      if (botonLimpiar) {
        botonLimpiar.addEventListener("click", function () {
          // Encuentra el formulario que contiene los filtros
          const form = botonLimpiar.closest("form");

          if (form) {
            // Limpia todos los campos del formulario
            const inputs = form.querySelectorAll("input, select, textarea");
            inputs.forEach((input) => {
              if (input.type === "checkbox" || input.type === "radio") {
                input.checked = false;
              } else {
                input.value = "";
              }
            });

            // Espera un momento antes de recargar sin filtros
            setTimeout(() => {
              const urlSinParametros = window.location.origin + window.location.pathname;
              window.location.href = urlSinParametros;
            }, 100);
          }
        });
      }
    });
  </script>

  <script>
    //modal reutilizable
    document.addEventListener("DOMContentLoaded", () => {
      const modalContainer = document.getElementById("purcha");
      const modal = modalContainer.querySelector(".div-purchase");
      const editarBtn = document.getElementById("modal-editar-btn");
      const fotoDiv = document.getElementById("modal-producto-foto");

      document.querySelectorAll(".open-detail-btn").forEach(div => {
        div.addEventListener("click", () => {
          // Datos del cliente
          document.getElementById("modal-cliente-id").textContent = div.dataset.clienteId;
          document.getElementById("modal-cliente-nombre").textContent = div.dataset.clienteNombre;
          document.getElementById("modal-cliente-documento").textContent = div.dataset.clienteDocumento;
          document.getElementById("modal-cliente-telefono").textContent = div.dataset.clienteTelefono;

          // Datos del producto
          document.getElementById("modal-producto-id").textContent = div.dataset.productoId;
          document.getElementById("modal-producto-nombre").textContent = div.dataset.productoNombre;
          document.getElementById("modal-producto-descripcion").textContent = div.dataset.productoDescripcion;
          document.getElementById("modal-producto-precio").textContent = div.dataset.productoPrecio;
          document.getElementById("modal-producto-precioxunidad").textContent = div.dataset.productoPrecioxunidad;
          document.getElementById("modal-producto-categoria").textContent = div.dataset.productoCategoria;
          document.getElementById("modal-producto-proveedor").textContent = div.dataset.productoProveedor;

          // Datos de la compra
          document.getElementById("modal-compra-id").textContent = div.dataset.compraId;
          document.getElementById("modal-compra-fecha").textContent = div.dataset.compraFecha;
          document.getElementById("modal-compra-cantidad").textContent = div.dataset.compraCantidad;
          document.getElementById("modal-compra-proveedor").textContent = div.dataset.compraProveedor;

          // Cargar imagen
          const imgUrl = div.dataset.productoImgUrl;
          fotoDiv.innerHTML = imgUrl ? `<img src="${imgUrl}" alt="Imagen del producto">` : "<p>No hay imagen</p>";

          // Mostrar el modal
          modal.style.display = "block";
        });
      });

      // Cerrar al hacer click fuera del modal
      window.addEventListener("click", (e) => {
        if (e.target === modalContainer) modal.style.display = "none";
      });
    });
</script>
</body>
</html>
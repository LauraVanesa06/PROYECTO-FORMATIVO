<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Appsena" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :abootstrap, "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :application, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>

<body>

  <main>
    <!-- HEADER -->
    <header class="container-header"> 
        <!-- Navegaci√≥n -->
        <nav class="main-nav d-flex gap-3">
          <%= link_to t("nav.home"), authenticated_root_path, class: "text-white fw-bold" %>
          <%= link_to t("nav.products"), productos_path, class: "text-white fw-bold" %>
          <%= link_to t("nav.contacts"), contactos_path, class: "text-white fw-bold" %>
        </nav>

        <!-- Iconos -->
        
        <div class="header-icons d-flex align-items-center gap-3 text-white fs-5">
          <div class="dropdown">
            <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
              üåê <%= I18n.locale.upcase %>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to t("languages.spanish"), url_for(locale: :es), class: "dropdown-item" %></li>
              <li><%= link_to t("languages.english"), url_for(locale: :en), class: "dropdown-item" %></li>
            </ul>
          </div>
          <%= link_to favoritos_path, class: "text-white" do %>
            <i class="fa-solid fa-star"></i>
          <% end %>

          <!-- Carrito: abre SIEMPRE el offcanvas derecho y muestra contador -->
          <%= link_to "#",
                      class: "text-white position-relative",
                      data: { bs_toggle: "offcanvas", bs_target: "#cartSidebar" } do %>
            <i class="fa-solid fa-cart-shopping"></i>
            <%# render partial: "carts/cart_count", locals: { count: @cart_items.sum(&:cantidad) } %>
          <% end %>


          <%= link_to notificaciones_path, class: "text-white" do %>
            <i class="fa-solid fa-bell"></i>
          <% end %>

          <!-- Usuario con dropdown -->
          <div class="dropdown">
            <a href="#" class="text-white dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <% if user_signed_in? %>
                <li><%= link_to t("user.profile"), edit_user_registration_path, class: "dropdown-item" %></li>
                <li>
                  <%= button_to t("user.logout"), destroy_user_session_path,
                                method: :delete,
                                data: { confirm: t("user.logout_confirm") },
                                class: "dropdown-item text-danger" %>
                </li>
              <% else %>
                <li><%= link_to t("user.login"), new_user_session_path, class: "dropdown-item" %></li>
                <li><%= link_to t("user.register"), new_user_registration_path, class: "dropdown-item" %></li>
              <% end %>
            </ul>
          </div>
        </div>
    </header>

    <!-- CONTENIDO -->
    <%= yield %>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center p-3 mt-auto">
      &copy; 2025 <%= t("app.name") %> - v3.1.4
    </footer>
  </main>

  <%= javascript_include_tag 'application2', "data-turbo-track": "reload" %>
  <%= javascript_include_tag 'mi_script', "data-turbo-track": "reload" %>

  <!-- Offcanvas DERECHO (√öNICO) -->
  <div class="offcanvas offcanvas-end" tabindex="-1" id="cartSidebar" aria-labelledby="cartSidebarLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="cartSidebarLabel"><%= t("cart.title") %></h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
    </div>
    <div class="offcanvas-body">
      <%= turbo_frame_tag "cart_items" do %>
        <%= render partial: "carts/cart_items", locals: { cart_items: @cart_items } %>
      <% end %>
    </div>
  </div>
</body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Appsena" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag :abootstrap, "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :application, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>

<body>
  <main>
    <!-- HEADER -->
    <header class="header-container d-flex align-items-center justify-content-between px-4" style="background-image: url('<%= asset_path('madera2.jpg') %>'); background-size: cover; background-position: center; height: 80px;">
      <!-- Logo -->
      <div class="logo">
        <%= link_to image_tag("logo.png", alt: "Ferremateriales El Maestro", style: "height:50px;"), authenticated_root_path %>
      </div>

      <!-- Navegación -->
      <nav class="main-nav d-flex gap-3">
        <%= link_to "Inicio", authenticated_root_path, class: "text-white fw-bold" %>
        <%= link_to "Productos", productos_path, class: "text-white fw-bold" %>
        <%= link_to "contactos", contactos_path, class: "text-white fw-bold" %>
      </nav>

      <!-- Iconos -->
      <div class="header-icons d-flex align-items-center gap-3 text-white fs-5">
        <%= link_to favoritos_path, class: "text-white" do %>
          <i class="fa-solid fa-star"></i>
        <% end %>
        <%= link_to "#", class: "text-white", data: { bs_toggle: "offcanvas", bs_target: "#carritoOffcanvas" } do %>
          <i class="fa-solid fa-cart-shopping"></i>
        <% end %>

        <%= link_to notificaciones_path, class: "text-white" do %>
          <i class="fa-solid fa-bell"></i>
        <% end %>

        <!-- Usuario con dropdown -->
        <div class="dropdown">
          <a href="#" class="text-white dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-user"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <% if user_signed_in? %>
              <li><%= link_to "Perfil", edit_user_registration_path, class: "dropdown-item" %></li>
              <li>
                <%= button_to "Cerrar sesión", destroy_user_session_path, 
                            method: :delete, 
                            data: { confirm: "¿Estás seguro de que quieres cerrar sesión?" }, 
                            class: "dropdown-item text-danger" %>
              </li>
            <% else %>
              <li><%= link_to "Iniciar sesión", new_user_session_path, class: "dropdown-item" %></li>
              <li><%= link_to "Registrarse", new_user_registration_path, class: "dropdown-item" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </header>

    <!-- CONTENIDO -->
    <%= yield %>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center p-3 mt-auto">
      &copy; 2025 Ferremateriales el Maestro - v2.3.7
    </footer>
    <!-- Offcanvas Carrito -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="carritoOffcanvas" aria-labelledby="carritoOffcanvasLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="carritoOffcanvasLabel">
      <i class="fa-solid fa-cart-shopping"></i> Tu carrito
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
  </div>
  <div class="offcanvas-body">
    <% if @cart_items.present? %>
      <ul class="list-group mb-3">
        <% @cart_items.each do |item| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <% if item.product.imagen.present? %>
                <%= image_tag url_for(item.product.imagen), style: "width:50px; height:50px; object-fit:cover;" %>
              <% else %>
                <%= image_tag "placeholder.png", style: "width:50px; height:50px; object-fit:cover;" %>
              <% end %>
              <span class="ms-2"><%= item.product.nombre %> x <%= item.cantidad %></span>
            </div>
            <span><%= number_to_currency(item.product.precio * item.cantidad) %></span>
          </li>
        <% end %>
      </ul>
      
    <% else %>
      <p>No hay productos en el carrito.</p>
    <% end %>
  </div>
</div>

  </main>

  <%= javascript_include_tag 'application2', "data-turbo-track": "reload" %>
  <%= javascript_include_tag 'mi_script', "data-turbo-track": "reload" %>
  <div class="offcanvas offcanvas-end" tabindex="-1" id="cartSidebar" aria-labelledby="cartSidebarLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="cartSidebarLabel">Tu carrito</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
  </div>
  <div class="offcanvas-body">
    <%= turbo_frame_tag "cart_items" do %>
      <%= render partial: "carts/cart_items", locals: { cart_items: @cart_items } %>
    <% end %>
  </div>
</div>

</body>
</html>

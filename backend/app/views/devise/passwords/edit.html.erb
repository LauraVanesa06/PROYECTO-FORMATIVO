<!-- backend/app/views/devise/passwords/edit.html.erb -->

<turbo-frame id="auth_frame">
  <div class="auth-form">
    <h2 class="text-center mb-4">Restablecer contraseña</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, "Nueva contraseña", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Nueva contraseña" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirmar contraseña", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmar contraseña" %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Actualizar contraseña", class: "btn btn-primary" %>
      </div>
    <% end %>

    <hr class="my-4">
    <p class="text-center mb-0">
      <%= link_to "Volver al inicio de sesión", new_user_session_path, data: { turbo_frame: "auth_frame" }, class: "text-decoration-none" %>
    </p>
  </div>
</turbo-frame>

<!-- backend/app/views/devise/passwords/new.html.erb -->

<turbo-frame id="auth_frame">
  <div class="auth-form">
    <h2 class="text-center mb-4">Recuperar contraseña</h2>

    <p class="text-center mb-3 text-muted">
      Ingresa tu correo electrónico y te enviaremos instrucciones para restablecer tu contraseña.
    </p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Correo electrónico", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", placeholder: "correo@ejemplo.com", autofocus: true %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Enviar instrucciones", class: "btn btn-primary" %>
      </div>
    <% end %>

    <hr class="my-4">

    <p class="text-center mb-0">
      ¿Ya tienes cuenta?
      <%= link_to "Inicia sesión aquí", new_user_session_path, class: "login-link text-decoration-none" %>
    </p>

  </div>
</turbo-frame>

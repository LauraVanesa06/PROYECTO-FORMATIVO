<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow p-4" style="width: 350px; border-radius: 15px;">
    <h4 class="text-center mb-3">Inicia sesión</h4>

    <% if flash[:alert] %>
      <div class="alert alert-danger py-2"><%= flash[:alert] %></div>
    <% elsif flash[:notice] %>
      <div class="alert alert-success py-2"><%= flash[:notice] %></div>
    <% end %>

    <%= form_with(model: resource, url: session_path(resource_name), local: true, data: { turbo: false }) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, class: "form-control", placeholder: "Correo electrónico", required: true %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, class: "form-control", placeholder: "Contraseña", required: true %>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
        </div>
        <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, class: "text-decoration-none small" %>
      </div>

      <%= f.submit "Iniciar sesión", class: "btn btn-primary w-100" %>
    <% end %>

    <hr class="my-4">
    <p class="text-center mb-0">
      ¿No tienes cuenta?
      <%= link_to "Regístrate aquí", new_user_registration_path, class: "text-decoration-none" %>
    </p>
  </div>
</div>

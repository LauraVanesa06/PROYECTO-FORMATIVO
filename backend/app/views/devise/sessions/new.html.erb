<div class="login-form-container">
  <!-- Icono de usuario circular -->
  <div class="text-center mb-4">
    <div class="login-user-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="white" viewBox="0 0 16 16">
        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
      </svg>
    </div>
  </div>

  <h3 class="text-center mb-4">Inicia sesión</h3>

  <% if flash[:alert] %>
    <div class="alert alert-danger py-2 text-center"><%= flash[:alert] %></div>
  <% elsif flash[:notice] %>
    <div class="alert alert-success py-2 text-center"><%= flash[:notice] %></div>
  <% end %>

  <%= form_with(model: resource, url: session_path(resource_name), local: true, data: { turbo: false }) do |f| %>
    <div class="mb-3">
      <%= f.email_field :email, class: "form-control login-input-box", placeholder: "Correo electrónico", required: true, autocomplete: "off" %>
    </div>

    <div class="mb-3 position-relative">
      <%= f.password_field :password, class: "form-control login-input-box", id: "password-field", placeholder: "Contraseña", required: true, autocomplete: "off" %>
      <button type="button" onclick="togglePassword()" class="password-toggle-btn" id="toggle-password-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="eye-icon" id="eye-icon-open" viewBox="0 0 16 16">
          <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
          <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="eye-icon" id="eye-icon-closed" viewBox="0 0 16 16" style="display: none;">
          <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
          <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/>
          <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
        </svg>
      </button>
    </div>

    <%= f.submit "Entrar", class: "btn btn-primary w-100 login-btn-submit" %>
  <% end %>

  <div class="text-center mt-3">
    <p class="help-text mb-2">¿Necesitas ayuda?</p>
  </div>

  <div class="text-center mt-3">
    <p class="register-text mb-2">
      ¿No tienes cuenta?
      <%= link_to "Regístrate aquí", new_user_registration_path, class: "register-link" %>
    </p>
  </div>

  <div class="text-center mt-4">
    <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, class: "forgot-password-link" %>
  </div>
</div>

<script>
  function togglePassword() {
    const passwordField = document.getElementById('password-field');
    const eyeOpen = document.getElementById('eye-icon-open');
    const eyeClosed = document.getElementById('eye-icon-closed');
    
    if (passwordField.type === 'password') {
      passwordField.type = 'text';
      eyeOpen.style.display = 'none';
      eyeClosed.style.display = 'block';
    } else {
      passwordField.type = 'password';
      eyeOpen.style.display = 'block';
      eyeClosed.style.display = 'none';
    }
  }
</script>

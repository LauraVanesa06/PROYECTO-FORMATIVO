<div class="login-form-container">
  <h3 class="text-center mb-4">Inicia sesión</h3>

  <% if flash[:alert] %>
    <div class="alert alert-danger py-2 text-center"><%= flash[:alert] %></div>
  <% elsif flash[:notice] %>
    <div class="alert alert-success py-2 text-center"><%= flash[:notice] %></div>
  <% end %>

  <%= form_with(model: resource, url: session_path(resource_name), local: true, data: { turbo: false }) do |f| %>
    <div class="mb-3">
      <%= f.email_field :email, class: "form-control login-input", placeholder: "Correo electrónico", required: true %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password, class: "form-control login-input", placeholder: "Contraseña", required: true %>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
      </div>
      <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, class: "small text-decoration-none" %>
    </div>

    <%= f.submit "Entrar", class: "btn btn-primary w-100 login-btn" %>
  <% end %>

  <hr class="my-4">
  <p class="text-center mb-0">
    ¿No tienes cuenta?
    <%= link_to "Regístrate aquí", new_user_registration_path, class: "text-decoration-none" %>
  </p>
</div>

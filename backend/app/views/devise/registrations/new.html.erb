<div class="login-form-container">
  <h3 class="text-center mb-4">Registrarse</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "correo@ejemplo.com" %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Contraseña" %>
    </div>

    <div class="mb-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirma tu contraseña" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrarse", class: "btn btn-primary w-100 login-btn" %>
    </div>
  <% end %>

  <hr class="my-4">
  <p class="text-center mb-0">
    ¿Ya tienes cuenta?
    <%= link_to "Inicia sesión", new_user_session_path, class: "text-decoration-none login-link", data: { turbo: false } %>
  </p>
</div>

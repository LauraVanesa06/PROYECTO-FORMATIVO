  </div>

  <script>
    function showAboutDialog() {
      const dialog = confirm(`Ferremateriales\n\nVersi√≥n 3.1.4\n¬© 2025 Ferremateriales\n\nTu tienda de confianza para materiales de construcci√≥n y herramientas.`);
    }

    function togglePwd(fieldId) {
      const field = document.getElementById(fieldId);
      const btn = field.nextElementSibling;
      
      if (field.type === 'password') {
        field.type = 'text';
        btn.textContent = 'üôà';
      } else {
        field.type = 'password';
        btn.textContent = 'üëÅÔ∏è';
      }
    }
  </script>

</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Cambiar Contrase√±a - Ferremateriales</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    .password-container {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .password-header {
      background: white;
      border-radius: 20px;
      padding: 30px;
      margin-bottom: 24px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .password-title {
      font-size: 24px;
      font-weight: bold;
      color: #222;
      margin: 0 0 8px 0;
    }

    .password-subtitle {
      color: #999;
      margin: 0;
    }

    .form-section {
      background: white;
      border-radius: 16px;
      padding: 24px;
      margin-bottom: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .form-group {
      margin-bottom: 20px;
      position: relative;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
      font-size: 14px;
    }

    .form-input {
      width: 100%;
      padding: 12px 50px 12px 16px;
      border: 2px solid #e8e8e8;
      border-radius: 12px;
      font-size: 15px;
      transition: all 0.2s;
      box-sizing: border-box;
    }

    .form-input:focus {
      outline: none;
      border-color: #2e67a3;
      box-shadow: 0 0 0 3px rgba(46, 103, 163, 0.1);
    }

    .password-toggle {
      position: absolute;
      right: 16px;
      top: 42px;
      background: none;
      border: none;
      cursor: pointer;
      color: #999;
      font-size: 20px;
      padding: 0;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .password-toggle:hover {
      color: #2e67a3;
    }

    .password-requirements {
      margin-top: 12px;
      padding: 16px;
      background: #f8f9fa;
      border-radius: 8px;
      font-size: 13px;
    }

    .requirement {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 6px;
      color: #666;
    }

    .requirement.valid {
      color: #28a745;
    }

    .requirement-icon {
      width: 16px;
      height: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .save-button {
      width: 100%;
      padding: 16px;
      background: #2e67a3;
      border: none;
      color: white;
      border-radius: 12px;
      font-weight: 600;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.2s;
      margin-top: 8px;
    }

    .save-button:hover {
      background: #245283;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(46, 103, 163, 0.3);
    }

    .save-button:disabled {
      background: #ccc;
      cursor: not-allowed;
      transform: none;
    }

    .cancel-button {
      width: 100%;
      padding: 16px;
      background: white;
      border: 2px solid #e8e8e8;
      color: #666;
      border-radius: 12px;
      font-weight: 600;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      display: block;
      text-align: center;
    }

    .cancel-button:hover {
      border-color: #ccc;
      background: #f8f9fa;
    }

    .back-button {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 20px;
      background: white;
      border: 2px solid #2e67a3;
      color: #2e67a3;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 20px;
      transition: all 0.2s;
    }

    .back-button:hover {
      background: #2e67a3;
      color: white;
    }

    @media (max-width: 768px) {
      .password-container {
        padding: 16px;
      }

      .password-header {
        padding: 20px;
      }

      .form-section {
        padding: 20px;
      }
    }
  </style>
</head>
<body style="background: #f5f5f5; margin: 0; padding: 20px 0;">
  
  <div class="password-container">
    <%= link_to profile_path, class: 'back-button' do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Volver al perfil
    <% end %>

    <div class="password-header">
      <h1 class="password-title">Cambiar Contrase√±a</h1>
      <p class="password-subtitle">Actualiza tu contrase√±a de forma segura</p>
    </div>

    <%= form_with(url: update_password_profile_path, method: :patch, local: true, id: 'password-form') do |f| %>
      <div class="form-section">
        <div class="form-group">
          <%= label_tag :current_password, "Contrase√±a actual", class: 'form-label' %>
          <%= password_field_tag :current_password, nil, class: 'form-input', placeholder: 'Ingresa tu contrase√±a actual', id: 'current_password' %>
          <button type="button" class="password-toggle" onclick="togglePassword('current_password')">
            üëÅÔ∏è
          </button>
        </div>

        <div class="form-group">
          <%= label_tag :new_password, "Nueva contrase√±a", class: 'form-label' %>
          <%= password_field_tag :new_password, nil, class: 'form-input', placeholder: 'Ingresa tu nueva contrase√±a', id: 'new_password' %>
          <button type="button" class="password-toggle" onclick="togglePassword('new_password')">
            üëÅÔ∏è
          </button>

          <div class="password-requirements">
            <div class="requirement" id="req-length">
              <span class="requirement-icon">‚úì</span>
              <span>Al menos 6 caracteres</span>
            </div>
            <div class="requirement" id="req-uppercase">
              <span class="requirement-icon">‚úì</span>
              <span>Una letra may√∫scula</span>
            </div>
            <div class="requirement" id="req-lowercase">
              <span class="requirement-icon">‚úì</span>
              <span>Una letra min√∫scula</span>
            </div>
            <div class="requirement" id="req-number">
              <span class="requirement-icon">‚úì</span>
              <span>Un n√∫mero</span>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :password_confirmation, "Confirmar nueva contrase√±a", class: 'form-label' %>
          <%= password_field_tag :password_confirmation, nil, class: 'form-input', placeholder: 'Confirma tu nueva contrase√±a', id: 'password_confirmation' %>
          <button type="button" class="password-toggle" onclick="togglePassword('password_confirmation')">
            üëÅÔ∏è
          </button>
        </div>
      </div>

      <div class="form-section">
        <%= submit_tag "Guardar cambios", class: 'save-button', id: 'submit-btn', disabled: true %>
      </div>

      <%= link_to "Cancelar", profile_path, class: 'cancel-button' %>
    <% end %>

  </div>

  <script>
    function togglePassword(fieldId) {
      const field = document.getElementById(fieldId);
      const button = field.nextElementSibling;
      
      if (field.type === 'password') {
        field.type = 'text';
        button.textContent = 'üôà';
      } else {
        field.type = 'password';
        button.textContent = 'üëÅÔ∏è';
      }
    }

    // Validaci√≥n en tiempo real
    const newPasswordField = document.getElementById('new_password');
    const confirmPasswordField = document.getElementById('password_confirmation');
    const currentPasswordField = document.getElementById('current_password');
    const submitBtn = document.getElementById('submit-btn');

    function validatePassword() {
      const password = newPasswordField.value;
      
      // Validar requisitos
      const hasLength = password.length >= 6;
      const hasUppercase = /[A-Z]/.test(password);
      const hasLowercase = /[a-z]/.test(password);
      const hasNumber = /[0-9]/.test(password);

      // Actualizar UI
      document.getElementById('req-length').classList.toggle('valid', hasLength);
      document.getElementById('req-uppercase').classList.toggle('valid', hasUppercase);
      document.getElementById('req-lowercase').classList.toggle('valid', hasLowercase);
      document.getElementById('req-number').classList.toggle('valid', hasNumber);

      // Validar confirmaci√≥n
      const passwordsMatch = password === confirmPasswordField.value && password.length > 0;
      const currentPasswordFilled = currentPasswordField.value.length > 0;
      const allValid = hasLength && hasUppercase && hasLowercase && hasNumber && passwordsMatch && currentPasswordFilled;

      submitBtn.disabled = !allValid;
    }

    newPasswordField.addEventListener('input', validatePassword);
    confirmPasswordField.addEventListener('input', validatePassword);
    currentPasswordField.addEventListener('input', validatePassword);
  </script>

</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Editar Perfil - Ferremateriales</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    .edit-profile-container {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .edit-header {
      background: white;
      border-radius: 20px;
      padding: 30px;
      margin-bottom: 24px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .edit-title {
      font-size: 24px;
      font-weight: bold;
      color: #222;
      margin: 0 0 8px 0;
    }

    .edit-subtitle {
      color: #999;
      margin: 0;
    }

    .form-section {
      background: white;
      border-radius: 16px;
      padding: 24px;
      margin-bottom: 16px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .section-title {
      font-size: 18px;
      font-weight: 600;
      color: #222;
      margin: 0 0 20px 0;
      padding-bottom: 12px;
      border-bottom: 2px solid #f0f0f0;
    }

    .form-group {
      margin-bottom: 20px;
      position: relative;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
      font-size: 14px;
    }

    .form-input {
      width: 100%;
      padding: 12px 50px 12px 16px;
      border: 2px solid #e8e8e8;
      border-radius: 12px;
      font-size: 15px;
      transition: all 0.2s;
      box-sizing: border-box;
    }

    .form-input.no-toggle {
      padding: 12px 16px;
    }

    .form-input:focus {
      outline: none;
      border-color: #2e67a3;
      box-shadow: 0 0 0 3px rgba(46, 103, 163, 0.1);
    }

    .password-toggle {
      position: absolute;
      right: 16px;
      top: 42px;
      background: none;
      border: none;
      cursor: pointer;
      color: #999;
      font-size: 20px;
      padding: 0;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .password-toggle:hover {
      color: #2e67a3;
    }

    .password-requirements {
      margin-top: 12px;
      padding: 16px;
      background: #f8f9fa;
      border-radius: 8px;
      font-size: 13px;
    }

    .requirement {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 6px;
      color: #666;
    }

    .requirement:last-child {
      margin-bottom: 0;
    }

    .requirement.valid {
      color: #28a745;
    }

    .requirement-icon {
      width: 16px;
      height: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .save-button {
      width: 100%;
      padding: 16px;
      background: #2e67a3;
      border: none;
      color: white;
      border-radius: 12px;
      font-weight: 600;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.2s;
      margin-top: 8px;
    }

    .save-button:hover {
      background: #245283;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(46, 103, 163, 0.3);
    }

    .save-button:disabled {
      background: #ccc;
      cursor: not-allowed;
      transform: none;
    }

    .cancel-button {
      width: 100%;
      padding: 16px;
      background: white;
      border: 2px solid #e8e8e8;
      color: #666;
      border-radius: 12px;
      font-weight: 600;
      font-size: 16px;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      display: block;
      text-align: center;
    }

    .cancel-button:hover {
      border-color: #ccc;
      background: #f8f9fa;
    }

    .back-button {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 20px;
      background: white;
      border: 2px solid #2e67a3;
      color: #2e67a3;
      border-radius: 12px;
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 20px;
      transition: all 0.2s;
    }

    .back-button:hover {
      background: #2e67a3;
      color: white;
    }

    .avatar-section {
      text-align: center;
      margin-bottom: 24px;
      padding-bottom: 24px;
      border-bottom: 2px solid #f0f0f0;
    }

    .avatar-preview {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      border: 3px solid #2e67a3;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: rgba(46, 103, 163, 0.1);
      margin-bottom: 16px;
    }

    .avatar-preview svg {
      width: 50px;
      height: 50px;
      fill: #2e67a3;
    }

    @media (max-width: 768px) {
      .edit-profile-container {
        padding: 16px;
      }

      .edit-header {
        padding: 20px;
      }

      .form-section {
        padding: 20px;
      }
    }
  </style>
</head>
<body style="background: #f5f5f5; margin: 0; padding: 20px 0;">
  
  <div class="edit-profile-container">
    <%= link_to profile_path, class: 'back-button' do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Volver al perfil
    <% end %>

    <div class="edit-header">
      <h1 class="edit-title">Cuenta</h1>
      <p class="edit-subtitle">Gestiona tu informaci√≥n personal y seguridad</p>
    </div>

    <!-- Secci√≥n de Informaci√≥n Personal -->
    <%= form_with(model: @user, url: profile_path, method: :patch, local: true, id: 'profile-form') do |f| %>
      <div class="form-section">
        <h2 class="section-title">Informaci√≥n Personal</h2>
        
        <div class="avatar-section">
          <div class="avatar-preview">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
            </svg>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :name, "Nombre completo", class: 'form-label' %>
          <%= f.text_field :name, class: 'form-input no-toggle', placeholder: 'Ingresa tu nombre completo' %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Correo electr√≥nico", class: 'form-label' %>
          <%= f.email_field :email, class: 'form-input no-toggle', placeholder: 'tu@email.com' %>
        </div>
      </div>

      <div class="form-section">
        <%= f.submit "Guardar informaci√≥n", class: 'save-button' %>
      </div>
    <% end %>

    <!-- Secci√≥n de Cambio de Contrase√±a -->
    <%= form_with(url: update_password_profile_path, method: :patch, local: true, id: 'password-form') do |f| %>
      <div class="form-section">
        <h2 class="section-title">Seguridad</h2>
        
        <div class="form-group">
          <%= label_tag :current_password, "Contrase√±a actual", class: 'form-label' %>
          <%= password_field_tag :current_password, nil, class: 'form-input', placeholder: 'Ingresa tu contrase√±a actual', id: 'current_password' %>
          <button type="button" class="password-toggle" onclick="togglePasswordField('current_password')">
            üëÅÔ∏è
          </button>
        </div>

        <div class="form-group">
          <%= label_tag :new_password, "Nueva contrase√±a", class: 'form-label' %>
          <%= password_field_tag :new_password, nil, class: 'form-input', placeholder: 'Ingresa tu nueva contrase√±a', id: 'new_password' %>
          <button type="button" class="password-toggle" onclick="togglePasswordField('new_password')">
            üëÅÔ∏è
          </button>

          <div class="password-requirements">
            <div class="requirement" id="req-length">
              <span class="requirement-icon">‚óã</span>
              <span>Al menos 6 caracteres</span>
            </div>
            <div class="requirement" id="req-uppercase">
              <span class="requirement-icon">‚óã</span>
              <span>Una letra may√∫scula</span>
            </div>
            <div class="requirement" id="req-lowercase">
              <span class="requirement-icon">‚óã</span>
              <span>Una letra min√∫scula</span>
            </div>
            <div class="requirement" id="req-number">
              <span class="requirement-icon">‚óã</span>
              <span>Un n√∫mero</span>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag :password_confirmation, "Confirmar nueva contrase√±a", class: 'form-label' %>
          <%= password_field_tag :password_confirmation, nil, class: 'form-input', placeholder: 'Confirma tu nueva contrase√±a', id: 'password_confirmation' %>
          <button type="button" class="password-toggle" onclick="togglePasswordField('password_confirmation')">
            üëÅÔ∏è
          </button>
        </div>
      </div>

      <div class="form-section">
        <%= submit_tag "Cambiar contrase√±a", class: 'save-button', id: 'password-submit-btn', disabled: true %>
      </div>
    <% end %>

    <%= link_to "Cancelar", profile_path, class: 'cancel-button' %>

  </div>

  <script>
    function togglePasswordField(fieldId) {
      const field = document.getElementById(fieldId);
      const button = field.nextElementSibling;
      
      if (field.type === 'password') {
        field.type = 'text';
        button.textContent = 'üôà';
      } else {
        field.type = 'password';
        button.textContent = 'üëÅÔ∏è';
      }
    }

    // Validaci√≥n en tiempo real de contrase√±a
    const newPasswordField = document.getElementById('new_password');
    const confirmPasswordField = document.getElementById('password_confirmation');
    const currentPasswordField = document.getElementById('current_password');
    const submitBtn = document.getElementById('password-submit-btn');

    function validatePassword() {
      const password = newPasswordField.value;
      
      // Validar requisitos
      const hasLength = password.length >= 6;
      const hasUppercase = /[A-Z]/.test(password);
      const hasLowercase = /[a-z]/.test(password);
      const hasNumber = /[0-9]/.test(password);

      // Actualizar UI
      const reqLength = document.getElementById('req-length');
      const reqUppercase = document.getElementById('req-uppercase');
      const reqLowercase = document.getElementById('req-lowercase');
      const reqNumber = document.getElementById('req-number');

      if (hasLength) {
        reqLength.classList.add('valid');
        reqLength.querySelector('.requirement-icon').textContent = '‚úì';
      } else {
        reqLength.classList.remove('valid');
        reqLength.querySelector('.requirement-icon').textContent = '‚óã';
      }

      if (hasUppercase) {
        reqUppercase.classList.add('valid');
        reqUppercase.querySelector('.requirement-icon').textContent = '‚úì';
      } else {
        reqUppercase.classList.remove('valid');
        reqUppercase.querySelector('.requirement-icon').textContent = '‚óã';
      }

      if (hasLowercase) {
        reqLowercase.classList.add('valid');
        reqLowercase.querySelector('.requirement-icon').textContent = '‚úì';
      } else {
        reqLowercase.classList.remove('valid');
        reqLowercase.querySelector('.requirement-icon').textContent = '‚óã';
      }

      if (hasNumber) {
        reqNumber.classList.add('valid');
        reqNumber.querySelector('.requirement-icon').textContent = '‚úì';
      } else {
        reqNumber.classList.remove('valid');
        reqNumber.querySelector('.requirement-icon').textContent = '‚óã';
      }

      // Validar confirmaci√≥n
      const passwordsMatch = password === confirmPasswordField.value && password.length > 0;
      const currentPasswordFilled = currentPasswordField.value.length > 0;
      const allValid = hasLength && hasUppercase && hasLowercase && hasNumber && passwordsMatch && currentPasswordFilled;

      submitBtn.disabled = !allValid;
    }

    newPasswordField.addEventListener('input', validatePassword);
    confirmPasswordField.addEventListener('input', validatePassword);
    currentPasswordField.addEventListener('input', validatePassword);
  </script>

</body>
</html>
